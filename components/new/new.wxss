}

.music_list-tp {
  width: 228rpx;
  height: 200rpx;
  /* border-radius: 5%; */
}

.music_list-tp image {
  width: 100%;
  height: 100%;
  border-radius: 5%;
}

.music_list-text {
   width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 22rpx;
  text-align: center;
}